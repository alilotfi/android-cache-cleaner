<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:persistent="false"
    android:title="@string/about_app">

    <android.support.v7.preference.PreferenceCategory android:title="@string/about">

        <android.support.v7.preference.Preference
            android:summary="@string/author_name"
            android:title="@string/author">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/authors_url" />

        </android.support.v7.preference.Preference>

        <android.support.v7.preference.Preference
            android:key="version"
            android:title="@string/version_number" />

        <android.support.v7.preference.Preference
            android:key="licences"
            android:title="@string/open_source_licences" />

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory android:title="@string/special_thanks">

        <android.support.v7.preference.Preference
            android:summary="@string/samuels_graphics_desc"
            android:title="@string/samuels_graphics">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/samuels_graphics_url" />

        </android.support.v7.preference.Preference>

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>
